<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    style="@style/AppTheme.Judging.Container"
    tools:context="com.hackfsu.android.app.fragment.judging.JudgingIntroFragment">

    <TextView
        android:id="@+id/tv_judging_intro_label"
        style="@style/AppTheme.Judging.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/judging_rank_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tv_judge_hack_1"
            style="@style/AppTheme.Judging.HackBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="16dp"
            android:text="@string/judging_hack_placeholder" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/tv_judge_hack_2"
            style="@style/AppTheme.Judging.HackBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="16dp"
            android:text="@string/judging_hack_placeholder" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/tv_judge_hack_3"
            style="@style/AppTheme.Judging.HackBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="16dp"
            android:text="@string/judging_hack_placeholder" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <Button
            style="@style/AppTheme.Judging.Button.Basic"
            android:id="@+id/btn_judge_reset"
            android:layout_width="match_parent"
            android:text="@string/judging_hack_reset"
            android:visibility="gone"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <Button
            style="@style/AppTheme.Judging.Button.Accent"
            android:id="@+id/btn_judge_submit"
            android:layout_width="match_parent"
            android:text="@string/judging_hack_submit" />


    </LinearLayout>



</LinearLayout>
