<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context="com.hackfsu.android.app.activity.LoginActivity">

    <!--<nl.dionsegijn.konfetti.KonfettiView-->
    <!--android:id="@+id/viewKonfetti"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24sp"
        android:orientation="vertical"
        android:padding="36dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/family_graphik_semibold"
            android:text="@string/title"
            android:textColor="@color/grey_50"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="105dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:rotation="-5"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/feather_2018_white"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="163dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/family_graphik_semibold"
            android:text="@string/subtitle"
            android:textAllCaps="false"
            android:textColor="@color/grey_50"
            android:textSize="42sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="214dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_login_field"
            android:capitalize="words"
            android:ellipsize="start"
            android:ems="10"
            android:fontFamily="@font/family_graphik_semibold"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailSubject|textPersonName"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/primaryTextLight"
            android:textColorHint="@color/primaryTextLight"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_login_field"
            android:capitalize="words"
            android:ellipsize="start"
            android:ems="10"
            android:fontFamily="@font/family_graphik_semibold"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/primaryTextLight"
            android:textColorHint="@color/primaryTextLight"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:id="@+id/btn_login"
            style="@style/AppTheme.Judging.Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:capitalize="words"
            android:elevation="0dp"
            android:onClick="onClick"
            android:shadowColor="@android:color/transparent"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</LinearLayout>
