<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Judging.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="48dp"
    tools:context="com.hackfsu.android.app.fragment.judging.JudgingBaseFragment">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        style="@style/AppTheme.Judging.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/judging_hack_goto"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_judge_individual_table_no"
        style="@style/AppTheme.Judging.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#2"
        android:textSize="48sp" />


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <Button
        android:id="@+id/btn_judge_add_superlative"
        style="@style/AppTheme.Judging.Button.Basic"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="@string/judging_add_superlative"
        android:textColor="@color/primary"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_judge_next"
        style="@style/AppTheme.Judging.Button.Accent"
        android:layout_width="match_parent"
        android:text="@string/judging_next_hack" />


</LinearLayout>
