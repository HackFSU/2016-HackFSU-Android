<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Judging.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.hackfsu.android.app.fragment.judging.JudgingBaseFragment">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        style="@style/AppTheme.Judging.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judging_hack_goto" />

    <TextView
        style="@style/AppTheme.Judging.Label"
        android:id="@+id/tv_judge_individual_table_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#2" />


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <Button
        style="@style/AppTheme.Judging.Button.Basic"
        android:id="@+id/btn_judge_add_superlative"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:text="@string/judging_add_superlative" />

    <Button
        style="@style/AppTheme.Judging.Button.Accent"
        android:id="@+id/btn_judge_next"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:text="@string/judging_next_hack" />



</LinearLayout>
